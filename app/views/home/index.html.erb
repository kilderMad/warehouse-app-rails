<h1>Galpões e Estoque</h1>
<% if flash[:notice] %>
  <p style='color: green'><%= flash[:notice]%></p>
<% end %>
<div>
  <%= link_to 'Cadastrar Galpão', new_warehouse_path %>
</div>
<div>
  <%= link_to 'Cadastrar Fornecedor', new_warehouse_path %>
</div> 

<% @warehouses.each do |w| %>
  <div>
    <p><%=link_to w.name, warehouse_path(w.id)%></p>
    <p>Código: <%= w.code%></p>
    <p>Cidade: <%= w.city%></p>
    <p><%= w.area%></p>
  </div>
<% end %>

<% if @warehouses.empty? %>
  <p>Não existem galpões cadastrados</p>
<% end %>