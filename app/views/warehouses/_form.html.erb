<% if @warehouse.errors.any? %>
    <ul>
    <% @warehouse.errors.each do |error| %>
        <li><%= error.full_message %></li>
    <% end %>
    </ul>
<% end %>
<section class="container">
<%= form_with model: @warehouse, html: { class: 'form'} do |f| %>
    <div>
        <div class='field'>
            <%= f.label :name %> 
            <%= f.text_field :name %> <%= @warehouse.errors.full_messages_for(:name)%>
        </div>
        <div class='field'>
            <%= f.label :code%>
            <%= f.text_field :code %>
        </div>
        <div class='field'>
            <%= f.label :area%>
            <%= f.number_field :area %>
        </div>
        <div class='field'>
            <%= f.label :cep%>
            <%= f.text_field :cep %>
        </div>
        <div class='field'>
            <%= f.label :city%>
            <%= f.text_field :city %>
        </div>
        <div class='field'>
            <%= f.label :address %>
            <%= f.text_field :address %>
        </div>
        <div class='field'> 
            <%= f.label :description %>
            <%= f.text_area :description %>
        </div>
        <div class='w-full'>
            <%= f.submit 'Enviar', class: 'btn-primary w-full'%>
        </div>
    </div>
<% end %>
</section>