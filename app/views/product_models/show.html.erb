<h1>Modelo de <%= @product_model.name%></h1>

<% if flash[:notice] %>
  <p style='color: green'><%= flash[:notice]%></p>
<% end %>

<section id='product_model'>
    <div>
        <p>Produto: <%= @product_model.name%></p>
        <p>Código SKU: <%= @product_model.sku%></p>
        <p>Fornecedor: <%= @product_model.supplier.fantasy_name%></p>
        <p>Peso: <%= @product_model.wight%> gramas</p>
        <p>Dimensões: <%= @product_model.width%>cm x <%= @product_model.height%>cm x <%= @product_model.depth%>cm </p>
    </div>
    <div>
           
        <%= link_to 'Voltar', root_path%>
        <%= link_to 'Editar', edit_product_model_path%>
    </div>
</section>