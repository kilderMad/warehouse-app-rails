<% if @product_model.errors.any? %>
    <ul>
    <% @product_model.errors.each do |error| %>
        <li><%= error.full_message %></li>
    <% end %>
    </ul>
<% end %>
<section class='container'>
<%= form_with model: @product_model, html: { class: 'form'} do |f| %>
    <div>
        <div class='field'>
            <%= f.label :name %> 
            <%= f.text_field :name %>
        </div>
        <div class='field'>
            <%= f.label :sku%>
            <%= f.text_field :sku %>
        </div>
        <div class='field'>
            <%= f.label :supplier_id, 'Fornecedor' %>
            <%= f.collection_select :supplier_id, @suppliers, :id, :fantasy_name %>
        </div>
        <div class='field'>
            <%= f.label :wight%>
            <%= f.number_field :wight %>
        </div>
        <div class='field'>
            <%= f.label :width%>
            <%= f.number_field :width %>
        </div>
        <div class='field'>
            <%= f.label :height %>
            <%= f.number_field :height %>
        </div>
        <div class='field'>
            <%= f.label :depth %>
            <%= f.number_field :depth %>
        </div>
        <div class='w-full'>
            <%= f.submit 'Enviar', class:'btn-primary w-full'%>
        </div>
    </div>
<% end %>
</section>